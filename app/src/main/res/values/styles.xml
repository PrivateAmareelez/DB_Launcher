<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoTitleBar" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Theme.IndigoLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#283593</item>
        <item name="colorAccent">#304FFE</item>
    </style>

    <style name="Theme.IndigoDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#303F9F</item>
        <item name="colorPrimaryDark">#1A237E</item>
        <item name="colorAccent">#8C9EFF</item>
    </style>

</resources>
